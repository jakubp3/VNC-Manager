generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int            @id @default(autoincrement())
  username  String         @unique
  password  String
  role      String         @default("user") // admin, user
  favorites UserFavorite[]
  logs      ActivityLog[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model VncMachine {
  id           Int            @id @default(autoincrement())
  name         String
  host         String
  port         Int            @default(5900)
  password     String?        // VNC password (encrypted or plain? user didn't specify, assume plain for now or simple encryption)
  notes        String?
  tags         String[]
  groups       String[]
  isShared     Boolean        @default(true) // Shared vs personal scope
  ownerId      Int?           // If personal, who owns it
  lastAccessed DateTime?
  favorites    UserFavorite[]
  logs         ActivityLog[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model UserFavorite {
  userId    Int
  machineId Int
  user      User       @relation(fields: [userId], references: [id])
  machine   VncMachine @relation(fields: [machineId], references: [id])

  @@id([userId, machineId])
}

model ActivityLog {
  id        Int         @id @default(autoincrement())
  userId    Int
  machineId Int?
  action    String      // create, update, delete, connect
  details   Json?
  timestamp DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id])
  machine   VncMachine? @relation(fields: [machineId], references: [id])
}
